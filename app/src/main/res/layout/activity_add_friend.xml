<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pop_up_window"
    >

    <EditText
        android:id="@+id/enter_root_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter a friend's email"
        android:inputType="textEmailAddress"
        android:background="@color/dark_peach"
        android:padding="16dp"
        />

    <Button
        android:id="@+id/fab_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintTop_toBottomOf="@id/enter_root_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Add a Friend"
        android:layout_marginTop="16dp"
        android:background="@color/blue_100"
        android:textColor="@color/black"
        android:padding="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>