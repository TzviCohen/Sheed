<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange_primary</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="sheedPrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sheedSecondaryText" parent="TextAppearance.AppCompat">
        <!--	Use lighter color to show lowered importance -->
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sheedParagraphText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFEB3B</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sheedPrimaryButton" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
